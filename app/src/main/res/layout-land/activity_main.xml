<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF">

    <Button
        android:id="@+id/addMoviesButton"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="11dp"
        android:backgroundTint="#30383A"
        android:focusable="auto"
        android:focusableInTouchMode="false"
        android:text="@string/add_movies_to_database"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/searchMovieButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/searchMovieButton"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="60dp"
        android:backgroundTint="#4E5B60"
        android:focusable="auto"
        android:focusableInTouchMode="false"
        android:text="@string/search_for_movies"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/addMoviesButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/searchMovieAllButton"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="60dp"
        android:backgroundTint="#4E5B60"
        android:focusable="auto"
        android:focusableInTouchMode="false"
        android:text="@string/search_all_movies"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/searchMovieActorButton"
        app:layout_constraintTop_toBottomOf="@+id/searchMovieButton" />

    <Button
        android:id="@+id/searchMovieActorButton"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="11dp"
        android:backgroundTint="#4E5B60"
        android:focusable="auto"
        android:focusableInTouchMode="false"
        android:text="@string/search_for_actors"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/searchMovieAllButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addMoviesButton" />

    <ImageView
        android:id="@+id/mainLogo"
        android:layout_width="390dp"
        android:layout_height="390dp"
        android:layout_marginBottom="160dp"
        android:contentDescription="@string/main_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_movie_catalogue" />
</androidx.constraintlayout.widget.ConstraintLayout>